<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ======== БАЗОВАЯ ТЕМА ======== -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">#6b3c72</item> <!-- насыщенный фиолетовый -->
        <item name="colorPrimaryVariant">#6b3c72</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#9A6BA0</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Фоновые -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Шрифты -->
        <item name="fontFamily">@font/urbanist_bold</item>

        <!-- Кнопки -->
        <item name="materialButtonStyle">@style/CustomPurpleButton</item>
    </style>

    <!-- ======== СВЕТЛАЯ ТЕМА ======== -->
    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSurface">#F0F0F0</item>
        <item name="colorOnSurface">#494159</item>
    </style>

    <!-- ======== ТЁМНАЯ ТЕМА ======== -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
    </style>

    <!-- ======== СТИЛЬ КНОПКИ ======== -->
    <style name="CustomPurpleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>

        <!-- Фиолетовый цвет -->
        <item name="backgroundTint">#6b3c72</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- Шрифт -->
        <item name="fontFamily">@font/urbanist_bold</item>
    </style>

</resources>
